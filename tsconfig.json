{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/category/[category].jsx",
    "components/ui/Pagination.js",
    "pages/area/[area].js",
    "components/ui/SearchBar.js",
    "pages/search.js",
    "pages/[filter].js",
    "pages/add-recipe.js",
    "components/layout/Header.js",
    "pages/favorites.js",
    "pages/recipes/[id].js",
    "components/view/MealCard.js",
    "pages/signup.js",
    "pages/login.js",
    "pages/_app.js",
    "components/view/AreaCard.js",
    "components/view/CategoryCard.js",
    "components/view/Error.js",
    "components/layout/Footer.js",
    "components/layout/Layout.js",
    "hooks/useModal.js",
    "pages/404.js",
    "pages/index.js"
  ],
  "exclude": ["node_modules"]
}
